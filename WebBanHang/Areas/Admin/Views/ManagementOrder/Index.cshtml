@model Order
<div class="container">
    
    <input  type="text" id="phoneInput" name="Phone" value="" />
    <button id="btnSearch" class=" btnSearch btn btn-light border text-primary icon-hover-primary">Tìm kiếm</button>

    <table id="ordersTable" class="table d-none">
        <thead>
            <tr>
                <th>Id</th>
                <th>Order Date</th>
                <th>Customer Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Total</th>
                <th>State</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
    <span id="Message" class="text-danger d-none">Không tìm thấy kết quả</span>
</div>